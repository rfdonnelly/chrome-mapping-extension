{
  "name": "Mapping Extensions",
  "version": "0.1",
  "description": "Adds context menu options for Google Maps and CalTopo",
  "background": {
    "scripts": ["main.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://caltopo.com/*"],
      "js": ["caltopo_menu_loader.js"]
    }
  ],
  "web_accessible_resources": [
    "caltopo_menu.js"
  ],
  "permissions": [
    "contextMenus",
    "tabs",
    // For injecting map control script
    "https://www.mountainproject.com/maps"
  ],
  "manifest_version": 2
}
